{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Project with Args",
            "type": "cppdbg",
            "request": "launch",
            "program": "main",  // 프로그램 경로 설정
            "args": ["reader"],  // 인자 설정
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Project",  // 빌드 태스크와 연동
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}